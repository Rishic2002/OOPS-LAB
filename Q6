#include<iostream>
#include<string>
using namespace std;
class str
{
    string a,b,c,r,s1,s2,s3,ss;
    int i,ct,n,j,len,k;
    public:
    void length()
    {	cout<<"\n\n...Length of string...\n\n";
        ct=0;
        cout<<"ENTER STRING=\n";

        cin>>a;
        for(i=0;a[i]!='\0';i++)
            {
                ct++;
            }
        cout<<"LENGTH OF STRING=\t"<<ct;
    }
    void concat()
    {	cout<<"CONCATENATION OPERATION"<<endl;
        cout<<"Enter string 1=";
        cin>>b;
        cout<<"Enter string 2=";
        cin>>c;
        cout<<" Entered Strings are="<<b<<endl<<c;
        n=0;
        for(i=0;b[i]!='\0';i++)
        {
            r[n]=b[i];
            n++;
        }
        for(j=0;c[j]!='\0';++j)
        {
            r[n]=c[j];
            n++;
        }
        cout<<"Resultant String="<<endl;
        for(i=0;r[i]!='\0';i++)
        {
                    cout<<r[i];
        }
    }
        void rev()
    {
        cout<<"REVERSE OPERATION"<<endl;
        cout<<"Enter string=";
        cin>>s3;
        ct=0,k=0;
        for(i=0;s3[i]!='\0';i++)
        {
          ct++;
        }
        for(i=ct-1;i>=0;i--,k++)
        {
            ss[k]=s3[i];
        }
        cout<<"reversed String is ="<<endl;

        for(i=0;i<k;i++)
        cout<<ss[i];
    }
};   int main()


  {
    str s;
    char ans;
    int ch;
    do

    {   
        cout<<"STRING OPERATIONS"<<endl;
        cout<<"1)Length"<<endl
        <<"2)ConCatination"<<endl
        <<"3)reverse"<<endl<<"Enter Choice (1-4)="<<endl;
        cin>>ch;
        switch(ch)
        { 
            case 1 :s.length(); break;
            case 2 :s.concat();	break;
            case 3 :s.rev();	break;
            default:cout<<"\n wrong selection..!!\n";
        }
    cout<<"\n\n Want try more operation(Y/N)=";
    cin>>ans;
    }while(ans=='Y'||ans=='y');
    return 0;
  }


